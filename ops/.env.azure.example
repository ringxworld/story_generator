APP_IMAGE=ghcr.io/ringxworld/story_generator:latest

# Local fallback services when not using managed Azure resources.
POSTGRES_DB=story_gen
POSTGRES_USER=story_gen
POSTGRES_PASSWORD=change_me

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_now
MINIO_CONSOLE_PORT=9001

# Use Azure Database for PostgreSQL + Blob/S3-compatible storage in hosted mode.
DATABASE_URL=postgresql://story_gen:change_me@db:5432/story_gen
S3_BUCKET=story-assets
S3_REGION=eastus
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=change_me_now
S3_ENDPOINT_URL=http://minio:9000

STORY_GEN_CORS_ORIGINS=https://ringxworld.github.io,http://127.0.0.1:5173
